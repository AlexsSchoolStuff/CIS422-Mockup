<Page x:Class="CIS422_Mockup.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CIS422_Mockup"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="White" Margin="0,0,10,0">

        <Label Content="Recent Activity:" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Low stock:" HorizontalAlignment="Center" Margin="300,125,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Dynamic Items:" HorizontalAlignment="Center" Margin="-300,125,0,0" VerticalAlignment="Top" FontSize="16"/>
        <ListBox x:Name="lstRecentItems" Margin="0,025,0,0" SelectedIndex="0" HorizontalAlignment="Center" VerticalAlignment="Top" MinWidth="528" MinHeight="88" MaxWidth="528" />
        <ListBox x:Name="lstLowStock" Margin="-300,164,0,0" MinWidth="256" MaxWidth="256" MinHeight="92" MaxHeight="92"  HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <ListBox x:Name="lstDynamicItems" Margin="300,164,0,0" MinWidth="256" MaxWidth="256" MinHeight="92" MaxHeight="92"  HorizontalAlignment="Center" VerticalAlignment="Top"/>

    </Grid>
</Page>
