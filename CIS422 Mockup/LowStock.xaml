      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CIS422_Mockup"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LowStock">

    <Grid Background="White">
        <TextBlock HorizontalAlignment="Center" Margin="-400,120,0,0" Text="Search: " TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="-230,120,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Center" Margin="-400,150,0,0" Text="Filter:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Center" Margin="-230,150,0,0" VerticalAlignment="Top" Width="120"/>
        <ListBox Name ="lstLowStock" HorizontalAlignment="Center" VerticalAlignment="Top" MaxHeight="200" Margin="0,180,0,0" FontSize="16"/>
    </Grid>
</Page>
